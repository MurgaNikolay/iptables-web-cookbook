default: &default
  google_client_id: <%=@google_key %>
  google_client_secret: <%=@google_secret %>
  google_domains:
    <% Array(@google_domains).each do |domain| %>
    - <%=domain %>
    <% end %>
<%-
acl = Array(@acl)
if acl.size > 0
%>
  acl:
    <% acl.each do |user| %>
    - <%=user %>
    <% end %>
<%- end %>
  api: #this is temporary solution for automatic node  registration via chef
    key: <%=@registration_key %>
    token: <%=@registration_token %>
    user:  <%=@registration_user %>
development:
  <<: *default

production:
  <<: *default
